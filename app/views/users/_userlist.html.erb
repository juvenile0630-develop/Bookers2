<h2>Users</h2>

<table class='table table-hover table-inverse'>
  <thead>
    <tr> 
      <th>Image</th>
      <th>name</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
  <% @users.each do |u| %>
    <tr>
    <td><%= attachment_image_tag u, :profile_image, size:"40x40", format: 'jpeg', class: "pull-left profile-img", fallback: "no_image.jpg" %></td>
    <td><%= u.name %></td>
    <td><%= link_to 'Show', user_path(u.id), method: :get %></td>
    </tr>
  <% end %>
  </tbody>
</table>