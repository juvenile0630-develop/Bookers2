<% if @user.errors.any? %>
  <div id="error_explanation">
    <h2><%= @user.errors.count %> errors prohibited this user from being saved:</h2>
    <ul style="color: red">
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<h2>User info</h2>
<%= form_for(@user) do |f| %>
  <div class="form-group has-icon">
    <label class="control-label sr-only" for="inputEmail">Name</label>
    <%= f.text_field :name, autofocus: true, class:"form-control", id:"inputEmail", placeholder:"名前"%>
    <span class="fa fa-user form-control-icon" aria-hidden="true"></span>
  </div>

<div class="field">
  <label for="user_image">Image</label>
  <%= f.attachment_field :profile_image, placeholder: "プロフィール画像", class: "user-edit-form" %>
</div>

<div class="field">
  <label for="user_introduction">Introduction</label>
    <%= f.text_area :introduction, autofocus: true, class:"form-control", id:"user_introduction" %>
</div>

  <%= f.submit "Update User", class:"btn btn-lg btn-block btn-base-1 mt-20" %>
<% end %>


