<h2>Books</h2>

<table class='table table-hover table-inverse'>
  <thead>
    <tr> 
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
  <% @books.each do |b| %>
    <tr>
    <td><%= attachment_image_tag b.user, :profile_image, size:"40x40", format: 'jpeg', class: "pull-left profile-img", fallback: "no_image.jpg" %></td>
    <td><%= link_to b.title, book_path(b.id), method: :get %></td>
    <td><%= b.body %></td>
    </tr>
  <% end %>
  </tbody>
</table>
