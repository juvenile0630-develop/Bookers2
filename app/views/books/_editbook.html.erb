<h2>Editing Book</h2>
<%= form_for(@book) do |f| %>
<div class="field row">
  <%= f.label :title %><br />
  <%= f.text_field :title, autofocus: true, autocomplete: "off", class:"col-xs-12 book_title" %>
</div>

<div class="field row">
  <%= f.label :opinion %><br />
  <%= f.text_area :body, autofocus: true, autocomplete: "off", class:"col-xs-12 book_body" %>
</div>

<div class="actions">
  <%= f.submit "Update Book", class:"btn btn-primary col-xs-12" %>
</div>
<% end %>
<%= link_to 'Show', book_path(@book.id) %> |
<%= link_to 'Back', books_path, class:"back" %>
<div class='col-md-3'></div>

