<h2>Sign up</h2>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <label for="user_name">Name</label><br />
  <div class="row">
    <div class="col-xs-2">
    <%= f.text_field :name, autofocus: true, class:"form-control", id:"inputName"%>
    </div>
  </div>

  <label for="user_name">Email</label><br />
  <div class="row">
    <div class="col-xs-2">
    <%= f.email_field :email, autofocus: true, class:"form-control", id:"inputEmail"%>
    </div>
  </div>
  <label for="user_password">Password</label> (6 characters minimum)<br />
  <div class="row">
    <div class="col-xs-2">
    <%= f.password_field :password, autocomplete: "off", class:"form-control", id:"inputPassword" %>
    </div>
  </div>
  <%= f.label :password_confirmation %><br />
  <div class="row">
    <div class="col-xs-2">
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control" %>
    </div>
  </div>

  <div class="row actions">
    <div class="col-xs-1">
      <%= f.submit "Sign Up", class:"btn btn-success " %>
    </div>
  </div>

<% end %>

<%= render "devise/shared/links" %>
